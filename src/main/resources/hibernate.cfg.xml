<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/Museum</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hbm2ddl.auto">update</property>
		
		<mapping class="com.softserveinc.edu.ita.Author"/>
		<mapping class="com.softserveinc.edu.ita.Excursion"/>
		<mapping class="com.softserveinc.edu.ita.Hall"/>
		<mapping class="com.softserveinc.edu.ita.Schedule"/>
		<mapping class="com.softserveinc.edu.ita.Showpiece"/>
		<mapping class="com.softserveinc.edu.ita.Worker"/>
	</session-factory>
</hibernate-configuration>